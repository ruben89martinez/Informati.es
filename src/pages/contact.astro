---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Déjanos un mensaje" />

  <ContactUs
    id="form"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, usted reconoce y acepta la recopilación de su información personal.',
    }}
    description="Nuestro equipo normalmente responde en menos de 24 horas."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos para ayudar"
    items={[
      {
        title: 'Phone',
        description: '678 13 93 90',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'ruben89martinez@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Murcia, España',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
